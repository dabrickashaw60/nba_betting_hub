<div class="d-flex justify-content-center align-items-center text-center mb-3" style="gap: 40px;">

  <!-- AWAY TEAM -->
  <div>
    <img src="https://cdn.ssref.net/req/202410231/tlogo/bbr/<%= @game.visitor_team.abbreviation %>-2025.png"
         alt="<%= @game.visitor_team.name %> logo"
         width="60">

    <div class="small text-muted mt-1">
      <% if @visitor_standing %>
        (<%= @visitor_standing.wins %>-<%= @visitor_standing.losses %>)
      <% else %>
        —
      <% end %>
    </div>

    <% if @game.visitor_points.to_i > 0 %>
      <div class="fs-4 fw-bold">
        <%= @game.visitor_points %>
      </div>
    <% end %>
  </div>

  <!-- CENTER: VS + DATE -->
  <div>
    <div class="fw-bold fs-5">VS</div>
    <div class="small text-muted">
      <%= @game.date.strftime("%b %d, %Y") %>
    </div>
  </div>

  <!-- HOME TEAM -->
  <div>
    <img src="https://cdn.ssref.net/req/202410231/tlogo/bbr/<%= @game.home_team.abbreviation %>-2025.png"
         alt="<%= @game.home_team.name %> logo"
         width="60">

    <div class="small text-muted mt-1">
      <% if @home_standing %>
        (<%= @home_standing.wins %>-<%= @home_standing.losses %>)
      <% else %>
        —
      <% end %>
    </div>

    <% if @game.home_points.to_i > 0 %>
      <div class="fs-4 fw-bold">
        <%= @game.home_points %>
      </div>
    <% end %>
  </div>

</div>


<div class="container" id="game-preview-container">

  <!-- BOX SCORE SECTION -->

  <% if @game.date < Date.today %>
    <!-- Visitor Team Box Score Card -->
    <%= render "games/box_score" %>

  <% else %>

    <%= render "games/game_preview" %>

  <% end %>

</div>

